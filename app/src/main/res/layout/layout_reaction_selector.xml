<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/add_reaction"
        android:textColor="@color/lightText"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="@color/lightDivider" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnLike"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="👍" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnLove"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="❤️" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnLaugh"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="😂" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnWow"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="😮" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSad"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="😢" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAngry"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="😡" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnClap"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="👏" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnFire"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="🔥" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnParty"
                style="@style/ReactionButton">
                <TextView
                    style="@style/ReactionEmoji"
                    android:text="🎉" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>